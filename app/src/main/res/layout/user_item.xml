<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/fullNameTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/fullNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/fullNameTitleTextView"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginStart="4dp" />

    <TextView
        android:id="@+id/phoneTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fullNameTitleTextView"
        android:layout_marginTop="8dp"
        android:text="Phone:"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/phoneTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/phoneTitleTextView"
        android:layout_below="@id/fullNameTextView"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/cityTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phoneTitleTextView"
        android:layout_marginTop="8dp"
        android:text="City:"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/cityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/cityTitleTextView"
        android:layout_below="@id/phoneTextView"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/companyTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cityTitleTextView"
        android:layout_marginTop="8dp"
        android:text="Company:"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/companyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/companyTitleTextView"
        android:layout_below="@id/cityTextView"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/statusTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/companyTitleTextView"
        android:layout_marginTop="8dp"
        android:text="Status:"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/statusTitleTextView"
        android:layout_below="@id/companyTextView"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp" />

</RelativeLayout>
